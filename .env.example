# ====================================
# AI BRADAA PRODUCTION ENVIRONMENT
# ====================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ====================================
# SERVER CONFIGURATION
# ====================================
NODE_ENV=development
PORT=3000
HOST=localhost
BASE_URL=http://localhost:3000

# ====================================
# GOOGLE GEMINI API
# ====================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL_PRO=gemini-2.5-pro
GEMINI_MODEL_FLASH=gemini-2.5-flash

# ====================================
# AUTHENTICATION
# ====================================
# Session secret (generate random 32+ characters)
SESSION_SECRET=your-random-32-char-secret-change-this-in-production

# JWT settings
JWT_SECRET=your-jwt-secret-change-this-in-production
JWT_EXPIRES_IN=7d

# Google OAuth (OPTIONAL - not implemented yet)
# GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
# GOOGLE_CLIENT_SECRET=GOCSPX-your-client-secret
# GOOGLE_CALLBACK_URL=https://www.aibradaa.com/auth/google/callback

# ====================================
# EMAIL (for magic links)
# ====================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=AI Bradaa <noreply@aibradaa.com>

# ====================================
# DATABASE (OPTIONAL)
# ====================================
# Uses in-memory storage by default
# DATABASE_URL=postgresql://user:pass@localhost:5432/aibradaa

# ====================================
# REDIS (OPTIONAL)
# ====================================
# Uses in-memory cache by default
# REDIS_URL=redis://localhost:6379

# ====================================
# RATE LIMITING
# ====================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS_FREE=10
RATE_LIMIT_MAX_REQUESTS_PRO=100
RATE_LIMIT_MAX_REQUESTS_ULTIMATE=1000

# ====================================
# TOKEN QUOTAS (per tier)
# ====================================
TOKEN_QUOTA_FREE=50000
TOKEN_QUOTA_PRO=500000
TOKEN_QUOTA_ULTIMATE=5000000

# ====================================
# OBSERVABILITY
# ====================================
LOG_LEVEL=info
ENABLE_TELEMETRY=true
# OTEL_EXPORTER_OTLP_ENDPOINT=https://your-otel-collector

# ====================================
# FEATURE FLAGS
# ====================================
ENABLE_OAUTH=false
ENABLE_2FA=true
ENABLE_MAGIC_LINKS=true
ENABLE_ABO_84=true
ENABLE_SOULS_PROTOTYPE=true

# ====================================
# DEPLOYMENT
# ====================================
DOMAIN=www.aibradaa.com
ALLOWED_ORIGINS=http://localhost:3000,https://www.aibradaa.com

# AI Bradaa Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ===========================
# Application
# ===========================
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# ===========================
# API Keys
# ===========================
# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_MODEL_PRO=gemini-exp-1206

# ===========================
# Authentication
# ===========================
# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_here_generate_random_string

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/google/callback

# Magic Link
MAGIC_LINK_SECRET=your_magic_link_secret_here

# ===========================
# Database (PostgreSQL)
# ===========================
# PostgreSQL connection (84-Mentor requirement: Persistent storage)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_bradaa
DB_USER=aibradaa
DB_PASSWORD=your_database_password_here

# Connection pool settings (optimized for serverless)
DB_POOL_MAX=20
DB_POOL_MIN=2
DB_IDLE_TIMEOUT=30000
DB_CONNECT_TIMEOUT=5000

# SSL for production
# DB_SSL_CA=/path/to/ca-certificate.crt

# Redis for rate limiting and caching (optional - using DB for now)
# REDIS_URL=redis://localhost:6379

# ===========================
# Email Service (for magic links, notifications)
# ===========================
# SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@aibradaa.com
SENDGRID_FROM_NAME=AI Bradaa

# Or use SMTP
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=true
# SMTP_USER=your_smtp_username
# SMTP_PASS=your_smtp_password

# ===========================
# Payment (Stripe)
# ===========================
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Stripe Price IDs (from tiers.json)
STRIPE_PRICE_ID_PRO=price_your_pro_price_id
STRIPE_PRICE_ID_ULTIMATE=price_your_ultimate_price_id

# ===========================
# Affiliate Programs
# ===========================
SHOPEE_AFFILIATE_ID=your_shopee_affiliate_id
LAZADA_AFFILIATE_KEY=your_lazada_affiliate_key

# OEM Partners (Phase 2)
# ASUS_PARTNER_ID=your_asus_partner_id
# ACER_PARTNER_ID=your_acer_partner_id
# LENOVO_PARTNER_ID=your_lenovo_partner_id

# ===========================
# Observability (OpenTelemetry)
# ===========================
OTEL_ENVIRONMENT=development
OTEL_EXPORTER_OTLP_ENABLED=false
# OTEL_EXPORTER_OTLP_ENDPOINT=https://otlp.example.com:4317
# OTEL_EXPORTER_OTLP_TOKEN=your_otlp_token

OTEL_TRACES_SAMPLER_RATIO=1.0
OTEL_CAPTURE_PROMPTS=true
OTEL_LOG_LEVEL=info

# ===========================
# Security
# ===========================
# CORS origin (comma-separated for multiple origins)
CORS_ORIGIN=http://localhost:3000

# Session secret
SESSION_SECRET=your_session_secret_here

# ===========================
# Rate Limiting
# ===========================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_FREE_TIER=10
RATE_LIMIT_PRO_TIER=30
RATE_LIMIT_ULTIMATE_TIER=60

# ===========================
# Feature Flags
# ===========================
FEATURE_INTEL_ENABLED=true
FEATURE_CAMERA_TECH_ENABLED=false
FEATURE_OAUTH_ENABLED=true
FEATURE_MAGIC_LINK_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true

# ===========================
# Phase 4: AI Integration & Auto-Fetch
# ===========================
# Data Sync Configuration
DATA_SYNC_INTERVAL_MS=21600000
DATA_SYNC_CACHE_TTL_MS=21600000
DATA_PRICE_CACHE_TTL_MS=1800000

# AI Integration Settings
AI_RATE_LIMIT_FREE=10
AI_RATE_LIMIT_PRO=30
AI_RATE_LIMIT_ULTIMATE=60
AI_QUOTA_DAILY_FREE=100
AI_QUOTA_DAILY_PRO=500
AI_QUOTA_DAILY_ULTIMATE=2000

# One Piece v4.0 Catchphrase System
CATCHPHRASE_ENABLED=true
CATCHPHRASE_CACHE_TTL_MS=86400000
CATCHPHRASE_MANGLISH_FREQUENCY=100

# PWA Configuration
PWA_VAPID_PUBLIC_KEY=your_vapid_public_key_here
PWA_VAPID_PRIVATE_KEY=your_vapid_private_key_here
PWA_CONTACT_EMAIL=admin@aibradaa.com

# ===========================
# Data Sources (ETL)
# ===========================
# Web scraping
SCRAPER_USER_AGENT=AI-Bradaa-Bot/1.0
SCRAPER_RATE_LIMIT_MS=1000
SCRAPER_TIMEOUT_MS=30000

# Shopee API (if available)
# SHOPEE_API_KEY=your_shopee_api_key
# SHOPEE_API_SECRET=your_shopee_api_secret

# Lazada API (if available)
# LAZADA_APP_KEY=your_lazada_app_key
# LAZADA_APP_SECRET=your_lazada_app_secret

# ===========================
# Caching
# ===========================
CACHE_ENABLED=true
CACHE_TTL_LAPTOPS=3600000
CACHE_TTL_PRICES=1800000
CACHE_TTL_INTEL=600000

# ===========================
# Logging
# ===========================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=false
LOG_FILE_PATH=./logs/app.log

# ===========================
# Cloud Deployment (Phase 2)
# ===========================
# AWS
# AWS_REGION=ap-southeast-1
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# S3_BUCKET_NAME=ai-bradaa-assets

# Google Cloud
# GOOGLE_CLOUD_PROJECT=your_gcp_project_id
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Azure
# AZURE_SUBSCRIPTION_ID=your_azure_subscription_id
# AZURE_TENANT_ID=your_azure_tenant_id

# ===========================
# Monitoring & Analytics
# ===========================
# Google Analytics (optional)
# GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry (error tracking)
# SENTRY_DSN=your_sentry_dsn_here
# SENTRY_ENVIRONMENT=development

# ===========================
# Development
# ===========================
# Hot reload
WATCH_FILES=true

# Debug mode
DEBUG=ai-bradaa:*

# Test credentials (for automated testing)
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=TestPassword123!

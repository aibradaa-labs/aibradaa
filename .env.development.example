# Development Environment Variables
# Copy this file to .env for local development

# Environment
NODE_ENV=development

# Server Configuration
PORT=3000
APP_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Google Gemini AI
GEMINI_API_KEY=your_gemini_api_key_here

# Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# Magic Link Configuration
MAGIC_LINK_SECRET=your_magic_link_secret_key
MAGIC_LINK_EXPIRES_IN=15m

# Email/SMTP Configuration (for magic links)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
SMTP_FROM_EMAIL=noreply@aibradaa.com
SMTP_FROM_NAME=AI Bradaa

# OAuth (Disabled per user requirement)
ENABLE_OAUTH=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Database (Client-side IndexedDB - no server DB needed)
# These are just for documentation
DB_NAME=ai_bradaa_db
DB_VERSION=1

# Logging
LOG_LEVEL=debug
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_LOGGING=true

# Monitoring (optional)
SENTRY_DSN=
ENABLE_SENTRY=false

# Development Tools
ENABLE_DEBUG_PANEL=true
ENABLE_HOT_RELOAD=true

# API Configuration
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=1000

# Cache Configuration
ENABLE_CACHE=true
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# Feature Flags
ENABLE_CAMERA_TECH=true
ENABLE_RAG_PIPELINE=false
ENABLE_VOICE_INPUT=false
ENABLE_TTS=false
ENABLE_DECK_V2=false

# TOON (Token-Optimized Object Notation)
ENABLE_TOON=false
TOON_COMPRESSION_RATIO=0.5

# Cost Tracking
ENABLE_COST_TRACKING=true
MONTHLY_BUDGET_USD=38.00
COST_ALERT_THRESHOLD=0.8

# Gemini Pricing (per 1K tokens)
GEMINI_INPUT_TOKEN_COST=0.00025
GEMINI_OUTPUT_TOKEN_COST=0.0005
GEMINI_VISION_INPUT_COST=0.0025

# PDPA Compliance
DATA_RETENTION_DAYS=90
ANONYMIZE_AFTER_DAYS=30
REQUIRE_CONSENT=true

# Performance
ENABLE_COMPRESSION=true
ENABLE_MINIFICATION=false
ENABLE_BUNDLE_ANALYSIS=false

# Security
ENABLE_HELMET=true
ENABLE_CORS=true
ENABLE_RATE_LIMITING=true
ENABLE_CSP=true

# CSP Configuration
CSP_SCRIPT_SRC='self' https://fonts.googleapis.com
CSP_STYLE_SRC='self' 'unsafe-inline' https://fonts.googleapis.com
CSP_FONT_SRC='self' https://fonts.gstatic.com
CSP_IMG_SRC='self' data: https:
CSP_CONNECT_SRC='self' https://generativelanguage.googleapis.com

# Deployment (for reference)
DEPLOYMENT_PLATFORM=local
BUILD_DATE=
GIT_COMMIT=

# Testing
TEST_MODE=false
MOCK_AI_RESPONSES=false
MOCK_EMAIL=true

# Analytics (Privacy-first, no external services)
ENABLE_ANALYTICS=true
ANALYTICS_STORAGE_KEY=ai_bradaa_analytics
ANALYTICS_MAX_EVENTS=1000

# Debug
DEBUG_API_CALLS=true
DEBUG_AI_PROMPTS=true
DEBUG_PERFORMANCE=true

# Netlify (for deployment reference)
# Set these in Netlify dashboard, not here
# NETLIFY_SITE_ID=
# NETLIFY_AUTH_TOKEN=

# Notes:
# - Never commit .env file to version control
# - Use strong, unique values for all secrets in production
# - Rotate keys regularly
# - Keep this file updated when adding new env vars
